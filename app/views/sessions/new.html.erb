<% provide(:title, "Log in") %>
<% if flash[:notice] %>
    <div id="notice" style="color: red;"><%= flash[:notice] %></div>
<% end %>
<br>
<h1 style="text-align:center;">Log in</h1>
<p style="text-align:center;">to continue to PayCut</p>
<div class="container">
    <div class="card card-container">
        <img id="profile-img" class="profile-img-card " src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <%= form_for(:session, url: login_path) do |f| %>
            <span id="reauth-email" class="reauth-email"></span>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: "Email address" %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            <div class="field" style="text-align:center;">
            <%= link_to "Forgot Password?", new_password_reset_path, class: "forgot-password" %>
            </div>
            <div id="remember" class="checkbox">
              <%#= f.label :remember_me, class: "checkbox inline" do %>
               <%#= f.check_box :remember_me %>
               <!-- <span>Remember me on this computer</span> -->
             <%#end %>
            </div>
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block btn-signin" %>
          <% end %>
          <br>
          <div class="field" style="text-align:center;">
              New customer? <%= link_to "Sign up now!", new_customer_path, class: "forgot-password" %>
        </div>
    </div><!-- /card-container -->
</div><!-- /container -->
