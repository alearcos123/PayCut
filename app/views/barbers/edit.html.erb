<h1>Editing Barber</h1>
<h2>Create a Service<h2>
<%= render 'services/form' %>
<%if !Service.find_by(barber_id: params[:id]) == nil? %>
  <b>Current Services You Offer</b> <br>
  <%Barber.find(params[:id]).services.each do |service| %>
  <div class="individual_service" style="border: solid;">
    <span>
      <%= service.description %>
    </span>
    <span>
      $<%= service.price %>
    </span>
    <span>
      <%= service.time_slots * 30 %> minutes
    </span>
  </div>
  <%end %>
<%end %>
<%= render 'form', barber: @barber %>
<%= link_to 'Show', @barber %>
<%= link_to 'Back', barbers_path %>
