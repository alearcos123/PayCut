<body class="viewBody">
 <div class="content" >
   <br>
<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Customers</h1>


<hr>

<table class="table table-striped" style="font-size: 22px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table table-striped">
    <% @customers.each do |customer| %>
      <tr class="thumbnail thumb-box">
        <td style="font-size: 20px;"><%= customer.name %></td>
        <td style="font-size: 20px;"><%= customer.email %></td>
        <td><%= link_to 'Show', customer, class:"btn btn-primary btn-lg" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class:"btn btn-info btn-lg"  %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <center>
<%= link_to 'New Customer', new_customer_path, class:"btn btn-info btn-lg" %>

</center>

</div>
</body>

